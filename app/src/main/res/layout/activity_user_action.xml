<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#0099cc"
             tools:context="com.draabek.androsigner.UserActionActivity">

    <TextView
        android:id="@+id/user_action_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="30sp"
        android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/user_action_yes"
                style="?metaButtonBarButtonStyle"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_action_yes"/>

            <Button
                android:id="@+id/user_action_no"
                style="?metaButtonBarButtonStyle"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_action_no"/>

        </LinearLayout>

</RelativeLayout>
